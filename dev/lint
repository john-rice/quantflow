#!/usr/bin/env bash
set -e

BLACK_ARG="--check"
RUFF_ARG=""

if [ "$1" = "fix" ] ; then
    BLACK_ARG=""
    RUFF_ARG="--fix"
fi

echo black
black quantflow quantflow_tests ${BLACK_ARG}
echo ruff
ruff quantflow quantflow_tests ${RUFF_ARG}
echo mypy
mypy quantflow
echo mypy tests
mypy quantflow_tests --explicit-package-bases
